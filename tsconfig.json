{
  "compilerOptions": {
    "types": ["vite/client"],
    "module": "ES2015",
    "target": "es5",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "experimentalDecorators":true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "example", "__test__", ".eslintrc.js"]
}
